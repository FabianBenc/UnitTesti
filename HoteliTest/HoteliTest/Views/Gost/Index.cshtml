@model PagedList.IPagedList<HoteliTest.Models.Gost>
    @using PagedList.Mvc;
<link href="~/Content/PagedList.css"  rel="stylesheet" type="text/css"/>

@{
    ViewBag.Title = "Gosti";
}

<h2>Gosti</h2>

<p>
    @Html.ActionLink("Novi Gost", "Create")
</p>

@using (Html.BeginForm("Index","Gost",FormMethod.Get))
{
    <p>
        Pretrazi po imenu: @Html.TextBox("SearchString",ViewBag.CurrentFilter as string)
        <input type="submit" value="Trazi"/>
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Ime", "Index", new { sortOrder = ViewBag.ImeSortParm,currentFilter=ViewBag.CurrentFilter })
        </th>
       <th>
           Prezime
       </th>
        <th>
            Email
        </th>
        <th>
            Adresa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prezime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adresa)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.GostID }) |
            @Html.ActionLink("Details", "Details", new { id=item.GostID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GostID })
        </td>
    </tr>
}

</table>
<br />
Page @(Model.PageCount<Model.PageNumber ? 0 :Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model,page=>Url.Action("Index", new {page, sortOrder=ViewBag.TrenutniSort,CurrentFilter=ViewBag.CurrentFilter }))
