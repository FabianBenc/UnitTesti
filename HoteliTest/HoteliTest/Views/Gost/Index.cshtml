@model IEnumerable<HoteliTest.Models.Gost>
    @using PagedList.Mvc;


@{
    ViewBag.Title = "Gosti";
}

<h2>Gosti</h2>

<p>
    @Html.ActionLink("Novi Gost", "Create")
</p>


<table class="table">
    <tr>
        <th>
            Ime
        </th>
       <th>
           Prezime
       </th>
        <th>
            Email
        </th>
        <th>
            Adresa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prezime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adresa)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.GostID }) |
            @Html.ActionLink("Details", "Details", new { id=item.GostID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GostID })
        </td>
    </tr>
}

</table>
